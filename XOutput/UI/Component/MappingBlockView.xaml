<UserControl x:Class="XOutput.UI.Component.MappingBlockView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:XOutput.UI.Component"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=local:MappingViewModel, IsDesignTimeCreatable=False}"
             d:DesignHeight="50" d:DesignWidth="610">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="90"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <ItemsControl ItemsSource="{Binding Model.MappingViews}" ItemsPanel="{StaticResource VerticalStackPanel}" Focusable="False"/>
        <ItemsControl Grid.Column="1" ItemsSource="{Binding Model.XInputViews}" ItemsPanel="{StaticResource VerticalStackPanel}" Focusable="False"/>
    </Grid>
</UserControl>
