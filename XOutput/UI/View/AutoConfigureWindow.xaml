<Window x:Class="XOutput.UI.View.AutoConfigureWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XOutput.UI.View"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Closed="Window_Closed"
        Title="AutoConfigure" Height="120" Width="500" ResizeMode="CanMinimize">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="80"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label VerticalAlignment="Center" Grid.Row="0" Grid.Column="0" Content="{Binding Model.LabelText}"/>
        <Label VerticalAlignment="Center" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Content="{Binding Model.MaxType}"/>
        <CheckBox Margin="5 0" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" IsChecked="{Binding Model.IsAuto}">Auto accept</CheckBox>
        <Button Margin="5 0" Padding="10" Grid.Row="1" Grid.Column="1" Click="Next_Click">Next</Button>
        <Button Margin="5 0" Padding="10" Grid.Row="1" Grid.Column="2" Click="Finish_Click">Finish</Button>
    </Grid>
</Window>
